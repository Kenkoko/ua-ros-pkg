<!-- just the kinematic body of the SmartArmAX12 -->
<KinBody name="SmartArmAX12">
	<Body name="BaseLink" type="dynamic">
		<Translation>0 0 0</Translation>
		<!-- Make arm look in the right direction in the world coordinates -->
		<Geom type="box">
    		<!-- Half-width, half-height, half-depth -->
			<Extents>0.0575 0.025 0.0575</Extents>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
	</Body>

	<Body name="ShoulderPanLink" type="dynamic">
		<offsetfrom>BaseLink</offsetfrom>
     	<!-- Half-height of base + half-height of shoulder-pan-joint -->
		<Translation>0 0.03 0.0075</Translation>
		<Geom type="cylinder">
			<radius>0.057</radius>
			<height>0.01</height>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
		<Geom type="box">
			<Translation>0 0.03 0</Translation>
			<Extents>0.0525 0.025 0.0155</Extents>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
		<Geom type="box">
			<Translation>0 0.0395 -0.037</Translation>
			<RotationAxis>1 0 0 -90</RotationAxis>
			<Extents>0.0525 0.0525 0.0155</Extents>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
	</Body>

	<Joint name="ShoulderPanJoint" type="hinge">
		<Body>BaseLink</Body>
		<Body>ShoulderPanLink</Body>
		<offsetfrom>ShoulderPanLink</offsetfrom>
		<weight>1</weight>
		<lostop>-70</lostop>
		<histop>70</histop>
		<axis>0 1 0</axis>
		<maxvel>3</maxvel>
		<resolution>1</resolution>
	</Joint>
	
	<Body name="ShoulderTiltLink" type="dynamic">
		<offsetfrom>ShoulderPanLink</offsetfrom>
     	<!-- Half-height of base + half-height of shoulder-pan-joint -->
		<Translation>0 0.0395 -0.095</Translation>
		<Geom type="box">
			<Extents>0.0525 0.0155 0.0155</Extents>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
		<Geom type="box">
			<Translation>0 0 -0.068</Translation>
			<Extents>0.0155 0.0155 0.0525</Extents>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
		<Geom type="box">
			<Translation>0 0 -0.1455</Translation>
			<Extents>0.0525 0.0155 0.025</Extents>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
	</Body>

	<Joint name="ShoulderTiltJoint" type="hinge">
		<Body>ShoulderPanLink</Body>
		<Body>ShoulderTiltLink</Body>
		<offsetfrom>ShoulderTiltLink</offsetfrom>
		<weight>1</weight>
		<lostop>-113</lostop>
		<histop>60</histop>
		<axis>1 0 0</axis>
		<maxvel>3</maxvel>
		<resolution>1</resolution>
	</Joint>

	<Body name="ElbowTiltLink" type="dynamic">
		<offsetfrom>ShoulderTiltLink</offsetfrom>
		<Translation>0 0 -0.176</Translation>
		<Geom type="box">
			<Extents>0.0525 0.0155 0.0155</Extents>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
		<Geom type="box">
			<Translation>0 0.0095 -0.0355</Translation>
			<Extents>0.0155 0.025 0.02</Extents>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
	</Body>

	<Joint name="ElbowTiltJoint" type="hinge">
		<Body>ShoulderTiltLink</Body>
		<Body>ElbowTiltLink</Body>
		<offsetfrom>ElbowTiltLink</offsetfrom>
		<weight>1</weight>
		<lostop>-113</lostop>
		<histop>108</histop>
		<axis>1 0 0</axis>
		<maxvel>3</maxvel>
		<resolution>1</resolution>
	</Joint>

	<Body name="WristRotateLink" type="dynamic">
		<offsetfrom>ElbowTiltLink</offsetfrom>
		<Translation>0 0.0245 -0.0805</Translation>
		<Geom type="box">
			<Extents>0.035 0.0155 0.025</Extents>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
	</Body>

	<Joint name="WristRotateJoint" type="hinge">
		<Body>ElbowTiltLink</Body>
		<Body>WristRotateLink</Body>
		<offsetfrom>WristRotateLink</offsetfrom>
		<weight>1</weight>
		<lostop>-150</lostop>
		<histop>150</histop>
		<axis>0 0 1</axis>
		<maxvel>3</maxvel>
		<resolution>1</resolution>
	</Joint>
	
	<Body name="FingerLeftLink" type="dynamic">
		<offsetfrom>WristRotateLink</offsetfrom>
		<RotationAxis>1 0 0 180</RotationAxis>
		<Translation>0.05 0 -0.02</Translation>
		<Geom type="box">
			<Extents>0.025 0.0155 0.01</Extents>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
		<Geom type="box">
    		<Translation>0.045 0 0.03</Translation>
		    <RotationAxis>0 1 0 45</RotationAxis>
			<Extents>0.0001 0.0155 0.055</Extents>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
	</Body>
	
	<Joint name="FingerLeftJoint" type="hinge">
		<Body>WristRotateLink</Body>
		<Body>FingerLeftLink</Body>
		<offsetfrom>FingerLeftLink</offsetfrom>
		<anchor>-0.02 0 0</anchor>
		<weight>1</weight>
		<lostop>0</lostop>
		<histop>62</histop>
		<axis>0 1 0</axis>
		<maxvel>3</maxvel>
		<resolution>1</resolution>
	</Joint>

	<Body name="FingerRightLink" type="dynamic">
		<offsetfrom>WristRotateLink</offsetfrom>
		<Translation>-0.05 0 -0.02</Translation>
		<Geom type="box">
			<Extents>0.025 0.0155 0.01</Extents>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
		<Geom type="box">
    		<Translation>-0.045 0 -0.03</Translation>
		    <RotationAxis>0 1 0 45</RotationAxis>
			<Extents>0.0001 0.0155 0.055</Extents>
			<diffuseColor>0.36 0.36 0.36</diffuseColor>
		</Geom>
	</Body>

	<Joint name="FingerRightJoint" type="hinge">
		<Body>WristRotateLink</Body>
		<Body>FingerRightLink</Body>
		<offsetfrom>FingerRightLink</offsetfrom>
		<anchor>0.02 0 0</anchor>
		<weight>1</weight>
		<lostop>0</lostop>
		<histop>62</histop>
		<axis>0 1 0</axis>
		<maxvel>3</maxvel>
		<resolution>1</resolution>
	</Joint>
</KinBody>
