<!-- just the kinematic body of the Crustcrawler Smart Robotic Arm -->
<KinBody name="SmartArmAX12">
    <Body name="BaseLink" type="dynamic">
        <Geom type="trimesh">
            <data>arm_base.iv</data>
            <diffuseColor>0.36 0.36 0.36</diffuseColor>
        </Geom>
    </Body>
    
    <Body name="ShoulderPanLink" type="dynamic">
        <offsetfrom>BaseLink</offsetfrom>
        <Translation>-0.0075 0 0.03</Translation>
        <Geom type="trimesh">
            <data>arm_shoulder_pan.iv</data>
            <diffuseColor>0.36 0.36 0.36</diffuseColor>
        </Geom>
    </Body>
    
    <Joint name="ShoulderPanJoint" type="hinge">
        <Body>BaseLink</Body>
        <Body>ShoulderPanLink</Body>
        <offsetfrom>ShoulderPanLink</offsetfrom>
        <weight>1</weight>
        <lostop>-70</lostop>
        <histop>70</histop>
        <axis>0 0 1</axis>
        <maxvel>1</maxvel>
        <resolution>1</resolution>
    </Joint>
    
    <Body name="ShoulderPitchLink" type="dynamic">
        <offsetfrom>ShoulderPanLink</offsetfrom>
        <Translation>0.079575 0 0.0395</Translation>
        <Geom type="trimesh">
            <data>arm_shoulder_tilt.iv</data>
            <diffuseColor>0.36 0.36 0.36</diffuseColor>
        </Geom>
    </Body>
    
    <Joint name="ShoulderPitchJoint" type="hinge">
        <Body>ShoulderPanLink</Body>
        <Body>ShoulderPitchLink</Body>
        <offsetfrom>ShoulderPitchLink</offsetfrom>
        <weight>1</weight>
        <lostop>-60</lostop>
        <histop>113</histop>
        <axis>0 1 0</axis>
        <maxvel>3</maxvel>
        <resolution>1</resolution>
    </Joint>
    
    <Body name="ElbowFlexLink" type="dynamic">
        <offsetfrom>ShoulderPitchLink</offsetfrom>
        <Translation>0.1815 0 0</Translation>
        <Geom type="trimesh">
            <data>arm_elbow_tilt.iv</data>
            <diffuseColor>0.36 0.36 0.36</diffuseColor>
        </Geom>
    </Body>
    
    <Joint name="ElbowFlexJoint" type="hinge">
        <Body>ShoulderPitchLink</Body>
        <Body>ElbowFlexLink</Body>
        <offsetfrom>ElbowFlexLink</offsetfrom>
        <weight>1</weight>
        <lostop>-113</lostop>
        <histop>108</histop>
        <axis>0 1 0</axis>
        <maxvel>1</maxvel>
        <resolution>1</resolution>
    </Joint>
    
    <Body name="WristRollLink" type="dynamic">
        <offsetfrom>ElbowFlexLink</offsetfrom>
        <Translation>0.07 0 0.023</Translation>
        <Geom type="trimesh">
            <data>arm_wrist_rotate.iv</data>
            <diffuseColor>0.36 0.36 0.36</diffuseColor>
        </Geom>
    </Body>
    
    <Joint name="WristRollJoint" type="hinge">
        <Body>ElbowFlexLink</Body>
        <Body>WristRollLink</Body>
        <offsetfrom>WristRollLink</offsetfrom>
        <weight>1</weight>
        <lostop>-150</lostop>
        <histop>150</histop>
        <axis>1 0 0</axis>
        <maxvel>1</maxvel>
        <resolution>1</resolution>
    </Joint>
    
    <Body name="FingerLeftLink" type="dynamic">
        <offsetfrom>WristRollLink</offsetfrom>
        <Translation>0.0415 0.0175 0</Translation>
        <Geom type="trimesh">
            <data>arm_left_finger.iv</data>
            <diffuseColor>0.36 0.36 0.36</diffuseColor>
        </Geom>
    </Body>
    
    <Joint name="FingerLeftJoint" type="hinge">
        <Body>WristRollLink</Body>
        <Body>FingerLeftLink</Body>
        <offsetfrom>FingerLeftLink</offsetfrom>
        <weight>1</weight>
        <lostop>-45</lostop>
        <histop>14</histop>
        <axis>0 0 1</axis>
        <maxvel>1</maxvel>
        <resolution>1</resolution>
    </Joint>
    
    <Body name="FingerRightLink" type="dynamic">
        <offsetfrom>WristRollLink</offsetfrom>
        <Translation>0.0415 -0.0175 0</Translation>
        <Geom type="trimesh">
            <data>arm_right_finger.iv</data>
            <diffuseColor>0.36 0.36 0.36</diffuseColor>
        </Geom>
    </Body>
    
    <Joint name="FingerRightJoint" type="hinge">
        <Body>WristRollLink</Body>
        <Body>FingerRightLink</Body>
        <offsetfrom>FingerRightLink</offsetfrom>
        <weight>1</weight>
        <lostop>-14</lostop>
        <histop>45</histop>
        <axis>0 0 1</axis>
        <maxvel>1</maxvel>
        <resolution>1</resolution>
    </Joint>
</KinBody>
