                </geometry>
            </collision>
        </link>
        
        <link name="L4_elbow_flex_link">
            <inertial>
                <mass value="0.030" />
                <origin xyz="0 0 0" rpy="0 0 0" />
                <inertia ixx="1.0" ixy="0" ixz="0"
                         iyy="1.0" iyz="0" 
                         izz="1.0" />
            </inertial>
            
            <visual>
                <origin xyz="0.035 0.044 0.026" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://wubble_arm_description/meshes/L4_elbow_flex_link.stl"/>
                </geometry>
                <material name="Grey" />
            </visual>
            
            <collision>
                <origin xyz="0.035 0.044 0.026" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://wubble_arm_description/meshes/L4_elbow_flex_link.stl"/>
                </geometry>
            </collision>
        </link>
        
        <link name="L5_forearm_roll_link">
            <inertial>
                <mass value="0.030" />
                <origin xyz="0 0 0" rpy="0 0 0" />
                <inertia ixx="1.0" ixy="0" ixz="0"
                         iyy="1.0" iyz="0" 
                         izz="1.0" />
            </inertial>
            
            <visual>
                <origin xyz="0.025 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://wubble_arm_description/meshes/L5_forearm_roll_link.stl"/>
                </geometry>
                <material name="Blue" />
            </visual>
            
            <collision>
                <origin xyz="0.025 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://wubble_arm_description/meshes/L5_forearm_roll_link.stl"/>
                </geometry>
            </collision>
        </link>
        
        <link name="L6_wrist_pitch_link">
            <inertial>
                <mass value="0.030" />
                <origin xyz="0 0 0" rpy="0 0 0" />
                <inertia ixx="1.0" ixy="0" ixz="0"
                         iyy="1.0" iyz="0" 
                         izz="1.0" />
            </inertial>
            
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://wubble_arm_description/meshes/L6_wrist_pitch_link.stl"/>
                </geometry>
                <material name="Green" />
            </visual>
            
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://wubble_arm_description/meshes/L6_wrist_pitch_link.stl"/>
                </geometry>
            </collision>
        </link>
        
        <link name="L7_wrist_roll_link">
            <inertial>
                <mass value="0.030" />
                <origin xyz="0 0 0" rpy="0 0 0" />
                <inertia ixx="1.0" ixy="0" ixz="0"
                         iyy="1.0" iyz="0" 
