<robot
    xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
    xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
    xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface">
    
    <macro name="wubble_arm" params="parent *origin">
        <!-- ****** JOINT DEFINITIONS ****** -->
        
        <!-- Arm's base joint -->
        <joint name="arm_base_joint" type="fixed">
            <insert_block name="origin" /> 
            <parent link="${parent}"/>
            <child link="L0_base_link"/>
        </joint>
        
        <!-- Shoulder pitch joint -->
        <joint name="shoulder_pitch_joint" type="revolute" >
            <origin xyz="0.029 0.029 0" rpy="0 0 0" />
            <parent link="L0_base_link" />
            <child link="L1_shoulder_pitch_link"/>
            
            <axis xyz="0 1 0"/>
            <limit  lower="-2.523" upper="1.048" effort="300" velocity="1.17" />
            <safety_controller k_position="100" k_velocity="15.0" soft_lower_limit="${-2.523}" soft_upper_limit="${1.048}" />
            <dynamics damping="50" friction="1"/>
        </joint>
        
        <!-- Shoulder pan joint -->
        <joint name="shoulder_pan_joint" type="revolute" >
            <origin xyz="0.069 0.029 -0.029" rpy="0 0 0" />
            <parent link="L1_shoulder_pitch_link" />
            <child link="L2_shoulder_pan_link"/>
            
            <axis xyz="0 0 1"/>
            <limit  lower="-3.351" upper="0.905" effort="300" velocity="1.17" />
            <safety_controller k_position="100" k_velocity="15.0" soft_lower_limit="${-3.351}" soft_upper_limit="${0.905}" />
            <dynamics damping="50" friction="1"/>
        </joint>
        
        <!-- Uppperarm roll joint -->
        <joint name="upperarm_roll_joint" type="revolute" >
            <origin xyz="0 0.1074 0" rpy="0 0 0" />
            <parent link="L2_shoulder_pan_link" />
            <child link="L3_upperarm_roll_link"/>
            
            <axis xyz="0 1 0"/>
            <limit  lower="-0.629" upper="3.75" effort="300" velocity="1.17" />
            <safety_controller k_position="100" k_velocity="15.0" soft_lower_limit="${-0.629}" soft_upper_limit="${3.75}" />
            <dynamics damping="50" friction="1"/>
        </joint>
        
        <!-- Elbow flex joint -->
        <joint name="elbow_flex_joint" type="revolute" >
            <origin xyz="0.029 0.132 0" rpy="0 0 0" />
            <parent link="L3_upperarm_roll_link" />
            <child link="L4_elbow_flex_link"/>
            
            <axis xyz="0 0 1"/>
            <limit  lower="-1.652" upper="1.846" effort="300" velocity="1.17" />
            <safety_controller k_position="100" k_velocity="15.0" soft_lower_limit="${-1.652}" soft_upper_limit="${1.846}" />
            <dynamics damping="50" friction="1"/>
        </joint>
        
        <!-- Forearm roll joint -->
        <joint name="forearm_roll_joint" type="revolute" >
            <origin xyz="0.034 0.029 0" rpy="0 0 0" />
            <parent link="L4_elbow_flex_link" />
            <child link="L5_forearm_roll_link"/>
            
            <axis xyz="1 0 0"/>
            <limit  lower="-2.521" upper="2.71" effort="300" velocity="1.17" />
            <safety_controller k_position="100" k_velocity="15.0" soft_lower_limit="${-2.521}" soft_upper_limit="${2.71}" />
            <dynamics damping="50" friction="1"/>
        </joint>
        
        <!-- Wrist pitch joint -->
        <joint name="wrist_pitch_joint" type="revolute" >
            <origin xyz="0.119 0 0" rpy="0 0 0" />
            <parent link="L5_forearm_roll_link" />
            <child link="L6_wrist_pitch_link"/>
            
            <axis xyz="0 1 0"/>
            <limit  lower="-2.158" upper="2.613" effort="300" velocity="1.17" />
            <safety_controller k_position="100" k_velocity="15.0" soft_lower_limit="${-2.158}" soft_upper_limit="${2.613}" />
            <dynamics damping="50" friction="1"/>
        </joint>
        
        <!-- Wrist roll joint -->
        <joint name="wrist_roll_joint" type="revolute" >
            <origin xyz="0.0925 0 0" rpy="0 0 0" />
            <parent link="L6_wrist_pitch_link" />
            <child link="L7_wrist_roll_link"/>
            
            <axis xyz="1 0 0"/>
            <limit  lower="-2.597" upper="2.633" effort="300" velocity="1.17" />
            <safety_controller k_position="100" k_velocity="15.0" soft_lower_limit="${-2.597}" soft_upper_limit="${2.633}" />
            <dynamics damping="50" friction="1"/>
        </joint>
        
        <!-- Left finger joint -->
        <joint name="left_finger_joint" type="revolute" >
            <origin xyz="0.0421 0.021 0" rpy="0 0 0" />
            <parent link="L7_wrist_roll_link" />
            <child link="L8_left_finger_link"/>
            
            <axis xyz="0 0 1"/>
            <limit  lower="-0.28" upper="0.785" effort="300" velocity="1.17" />
            <safety_controller k_position="100" k_velocity="15.0" soft_lower_limit="${-0.28}" soft_upper_limit="${0.785}" />
            <dynamics damping="50" friction="1"/>
        </joint>
        
        <!-- Right finger joint -->
        <joint name="right_finger_joint" type="revolute" >
            <origin xyz="0.0421 -0.021 0" rpy="0 0 0" />
            <parent link="L7_wrist_roll_link" />
            <child link="L9_right_finger_link"/>
            
            <axis xyz="0 0 1"/>
            <limit  lower="-0.785" upper="0.28" effort="300" velocity="1.17" />
            <safety_controller k_position="100" k_velocity="15.0" soft_lower_limit="${-0.785}" soft_upper_limit="${0.28}" />
            <dynamics damping="50" friction="1"/>
        </joint>
        
        <!-- ****** LINK DEFINITIONS ****** -->
        
        <link name="L0_base_link">
            <inertial>
                <mass value="0.325" />
                <origin xyz="0 0 0" rpy="0 0 0" />
                <inertia ixx="1.0" ixy="0" ixz="0"
                         iyy="1.0" iyz="0" 
                         izz="1.0" />
            </inertial>
            
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://wubble_arm_description/meshes/L0_base_link.stl"/>
                </geometry>
                <material name="Green" />
            </visual>
            
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://wubble_arm_description/meshes/L0_base_link.stl"/>
                </geometry>
            </collision>
        </link>
        
        <link name="L1_shoulder_pitch_link">
            <inertial>
                <mass value="0.030" />
                <origin xyz="0 0 0" rpy="0 0 0" />
                <inertia ixx="1.0" ixy="0" ixz="0"
                         iyy="1.0" iyz="0" 
                         izz="1.0" />
            </inertial>
            
            <visual>
