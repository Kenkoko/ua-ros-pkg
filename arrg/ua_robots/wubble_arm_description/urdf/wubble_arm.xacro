            </visual>
            
            <collision>
                <origin xyz="0 0.0545 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://wubble_arm_description/meshes/L2_shoulder_pan_link.stl"/>
                </geometry>
            </collision>
        </link>
        
        <link name="L3_upperarm_roll_link">
            <inertial>
                <mass value="0.030" />
                <origin xyz="0 0 0" rpy="0 0 0" />
                <inertia ixx="1.0" ixy="0" ixz="0"
                         iyy="1.0" iyz="0" 
