        <!-- ****** MATERIAL DEFINITIONS ****** -->
        
        <gazebo reference="L0_base_link">
            <material>SmartArm/GunMetalBrushedAluminum</material>
            <turnGravityOff>true</turnGravityOff>
        </gazebo>
        
        <gazebo reference="L1_shoulder_pitch_link">
