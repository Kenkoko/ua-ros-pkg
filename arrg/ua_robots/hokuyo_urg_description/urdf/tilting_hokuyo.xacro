<?xml version="1.0"?>

<robot xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
       xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
       xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface">

    <include filename="$(find hokuyo_urg_description)/urdf/hokuyo_urg.xacro" />

    <macro name="tilting_hokuyo" params="parent *origin">
        <joint name="hokuyo_tilt_joint" type="revolute">
            <parent link="${parent}" />
            <child link="hokuyo_link" />    

            <axis xyz="0 1 0" />
<!--           Original effort: 0.5292-->
            <limit lower="0.00" upper="${M_PI/3}" effort="2.0" velocity="4.0" />
<!--            <safety_controller k_position="100" k_velocity="0.05" soft_lower_limit="${-0.785+0.0}" soft_upper_limit="${1.57-0.0}" />-->
<!--            <calibration reference_position="${laser_calib_ref}" falling="${laser_calib_ref}" />-->
            <dynamics damping="0.008" />
            <insert_block name="origin" /> 
        </joint>

        <hokuyo_urg />

        <!-- TRANSMISSION -->
        <transmission type="SimpleTransmission" name="hokuyo_tilt_trans">
            <actuator name="hokuyo_tilt_motor" />
            <joint name="hokuyo_tilt_joint" />
            <mechanicalReduction>6.0</mechanicalReduction>
        </transmission>
    </macro>

</robot>
