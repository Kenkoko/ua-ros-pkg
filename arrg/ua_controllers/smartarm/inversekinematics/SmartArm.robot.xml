<Robot name="SmartArm">
	<KinBody file="smartarm.kinbody.xml"/>

    <Manipulator name="arm">
        <base>BaseLink</base>
        <armjoints>ShoulderPanJoint ShoulderTiltJoint ElbowTiltJoint WristRotateJoint</armjoints>
        <effector>WristRotateLink</effector>
        <gripperjoints>FingerLeftJoint FingerRightJoint</gripperjoints>
        <!-- joint values of the closed and opened positions -->
        <closed>62 62</closed>
        <opened>0 0</opened>
    </Manipulator>
</Robot>
