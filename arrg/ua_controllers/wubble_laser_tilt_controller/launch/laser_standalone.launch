<launch>
    <!-- Start the low-level driver manager with parameters -->
    <node name="ax12_controller_manager" pkg="ax12_driver_core" type="controller_manager.py" output="screen" required="true">
    <param name="port_name" type="str" value="/dev/ttyUSB0"/>
    <param name="baud_rate" type="int" value="1000000"/>
    <param name="max_motor_id" type="int" value="25"/>
    <param name="update_rate" type="int" value="1"/>
    </node>

    <!-- Load laser parameters from YAML file -->
    <rosparam file="$(find wubble_laser_tilt_controller)/config/laser_controller.yaml" command="load"/>

    <!-- Start the driver -->
    <node name="arm_spawner" pkg="ax12_driver_core" type="controller_spawner.py"
          args="start laser_tilt_controller"
          output="screen"/>
</launch>


